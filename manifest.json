{
  "manifest_version": 3,
  "name": "LexiCore",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "host_permissions": [
    "*://*/*"
  ],
  "commands": {
    "show_tooltip": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "LexiCore will suggest improvements"
    }
  }
}
